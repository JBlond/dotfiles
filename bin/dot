#!/usr/bin/env fish
switch $argv[1]
    case ""
        echo "ðŸš¨ No argument"
        echo ""
        echo " update"
        echo " fonts"
        echo " nvim"
        echo " diff"
        echo ""
        case update
        cd ~/dotfiles/
        make update
    case fonts
        cd ~/dotfiles/
        make fonts
    case nvim
        switch (uname)
            case Linux
                if ! test -d ~/.config/nvim
                    git clone https://github.com/JBlond/nvim.git ~/.config/nvim
                end
                cd ~/.config/nvim
                bash install-nvim.sh
            case '*'
                if ! test -d ~/AppData/Local/nvim
                    git clone -c core.autocrlf=false https://github.com/JBlond/nvim.git ~/AppData/Local/nvim
                end
        end
    case diff
        cd ~/dotfiles/
        git diff -uw
end
